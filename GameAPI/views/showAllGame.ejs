<h1 class="mt-4">Game</h1>
<p class="lead mb-3">Welcome <%= user.name %></p>
<% include ./partials/messages %>


<table class="table table-hover">
       
    <thead>
      <tr>
        <th scope="col">gameName</th>
        <th scope="col">gameDetail</th>
        <th scope="col">gameProducer</th>
        <th scope="col">company</th>
        <th scope="col">ignScore</th>
        
      </tr>
    </thead>
   
    <tbody>
            <% games.forEach(function (game) { %>
    
                
            
            <tr class="table-danger">
                <td> <%= game.gameName %></td>
                <td><%= game.gameDetail %></td>
                <td><%= game.gameProducer %></td>
                <td><%= game.company %></td>
                <td><%= game.ignScore %></td>
                <td></td>
                <td><form action="/updateGame" method="POST">
                    
                    <input type="hidden" id="gameName" name="gameName"  value=<%= game.gameName %>>
                    <input type="hidden" id="gameDetail" name="gameDetail"  value=<%= game.gameDetail %>>
                    <input type="hidden" id="gameProducer" name="gameProducer"  value=<%= game.gameProducer %>>
                    <input type="hidden" id="company" name="company"  value=<%= game.company %>>
                    <input type="hidden" id="ignScore" name="ignScore"  value=<%= game.ignScore %>>
                    <input type="hidden" id="userID" name="userID"  value=<%= game.userID %>>
                    <input type="hidden" id="gameuID" name="gameuID"  value=<%= game._id %>>
                    <input type="submit" value="update" />
                </form></td>
                <td><form action="/deleteGame" method="POST">
                  <input type="hidden" id="gameID" name="gameID"  value=<%= game._id %>>
                  <input type="submit" value="delete" />
              </form></td>

              <td><form action="/addToFavorite" method="POST">
                    
                <input type="hidden" id="gameName" name="gameName"  value=<%= game.gameName %>>
                <input type="hidden" id="gameDetail" name="gameDetail"  value=<%= game.gameDetail %>>
                <input type="hidden" id="gameProducer" name="gameProducer"  value=<%= game.gameProducer %>>
                <input type="hidden" id="company" name="company"  value=<%= game.company %>>
                <input type="hidden" id="ignScore" name="ignScore"  value=<%= game.ignScore %>>
                <input type="hidden" id="userID" name="userID"  value=<%= game.userID %>>
                <input type="hidden" id="userEvaluation" name="userEvaluation"  value="Good Game">
                <input type="hidden" id="userScore" name="userScore" >
                <input type="submit" value="Add To Favorite" />
            </form></td>
            </tr>
            <% }) %>
    </tbody>
</table> 








