<h1 class="mt-4">Game</h1>
<p class="lead mb-3">Welcome <%= user.name %> <%= user.email %> </p>

<form action="/createGame" method="POST">
  <fieldset>
    <legend>Legend</legend>
    <div class="form-group row">
      <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
      <div class="col-sm-10">
        <input type="text" readonly="" class="form-control-plaintext" id="userID" name="userID" value=<%= user._id %>>
       
      </div>
    </div>
    <div class="form-group">
      <label for="gameName">Game Name</label>
      <input type="text" class="form-control" id="gameName" name="gameName"  placeholder="Enter name">
      
    </div>
    <div class="form-group">
      <label for="gameDetail">Game Detail</label>
      <input type="text" class="form-control" id="gameDetail" name="gameDetail" placeholder="enter detail">
    </div>
    <div class="form-group">
      <label for="gameDetail">Game Producer</label>
      <input type="text" class="form-control" id="gameProducer" name="gameProducer" placeholder="enter detail">
    </div>
    <div class="form-group">
      <label for="gameDetail">Company of the game</label>
      <input type="text" class="form-control" id="company" name="company" placeholder="enter detail">
    </div>
    <div class="form-group">
      <label for="gameDetail">IGN Score</label>
      <input type="number" class="form-control" id="ignScore" name="ignScore" placeholder="enter detail" min="1" max="10">
    </div>
    
    
    
    </fieldset>
    <button type="submit" class="btn btn-primary">Submit</button>
  </fieldset>
</form>

